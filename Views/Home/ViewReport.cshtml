@model RegistrationWeb.Models.ReportModel

@{
    Layout = null;
}


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>لوحة التحكم</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../dist/css/adminlte.css">
    <!-- Bootstrap 4 RTL -->
    <link rel="stylesheet" href="../dist/css/bootstrap.min.css">
    <!-- Custom style for RTL -->
    <link rel="stylesheet" href="../dist/css/custom.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a class="brand-link">
                <img src="logo.png" alt="" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">لوحة التحكم</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="InfoDashboard" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    بيانات المتدربين
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="ReportsDashboard" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    التقييمات
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-10">
                            <h1>إضافة تقييم جديد</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">



                            <!-- general form elements -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">نموذج تقييم</h3>
                                </div>
                                <form asp-action="AddReport" method="post" enctype="multipart/form-data">
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="form-group col-4">
                                                <label  >رقم المتدرب</label>
                                                <input  type="text" value="@Model.TraineeID" class="form-control form-control-border" id="exampleInputBorder" value="">
                                           
                                            </div>
                                            <div class="form-group col-4">
                                                <label >فترة التقييم</label>
                                                <select disable  type="text" value="@Model.ReportNo" class="form-control form-control-border" id="exampleInputBorder">
                                                    <option value="1">الشهر الأول</option>
                                                    <option value="2">الشهر الثاني</option>
                                                    <option value="3">الشهر الثالث</option>
                                                    <option value="4">الشهر الرابع</option>
                                                    <option value="5">الشهر الخامس</option>
                                                    <option value="6">الشهر السادس</option>
                                                </select>
                                            </div>
                                            @*<input type="text" value="@Model.LastName" disabled style="display: none;">
                                            <input type="text"  value="@Model.Track" disabled style="display: none;">
                                            <input type="text" value="@Model.TraineeID" disabled style="display: none;">*@
                                            <div class="form-group col-4">
                                                <label  >الحضور اليومي   <code>7.5</code></label>
                                                <input disable  type="number" value="@Model.DailyAttendance" class="form-control form-control-border" value="1" min="0" step="0.1" max="7.5">
                                            </div>

                                            <div class="form-group col-4">
                                                <label  >عدم التأخير أو الخروج    <code>7.5</code></label>
                                                <input disable  type="number" value="@Model.LateOrExit" class="form-control form-control-border" value="1" min="0" step="0.1" max="7.5">
                                            </div>

                                            <div class="form-group col-4">
                                                <label  >بالإلترزام بأوقات الراحة    <code>7.5</code></label>
                                                <input disable  type="number" value="@Model.BreakTime" class="form-control form-control-border" value="1" min="0" step="0.1" max="7.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >تطوير مهارات المتدرب   <code>5</code></label>
                                                <input  type="number" value="@Model.Development" class="form-control form-control-border" value="1" min="0" step="0.1" max="5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >إتمام المهام في الوقت المحدد   <code>9.5</code></label>
                                                <input disable  type="number" value="@Model.TaskOnTime" class="form-control form-control-border" value="1" min="0" step="0.1" max="9.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >الرغبة والحماس في تنفيذ المهام    <code>8.5</code></label>
                                                <input  type="number" value="@Model.Excitement" class="form-control form-control-border" value="1" min="0" step="0.1" max="8.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >تنفيذ المهام بغض النظر عن الجودة   <code>3.5</code></label>
                                                <input disable  type="number" value="@Model.TaskAchievement" class="form-control form-control-border" value="1" min="0" step="0.1" max="3.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >التعاون مع فريق العمل    <code>0.5</code></label>
                                                <input disable  type="number" value="@Model.TeamWork" class="form-control form-control-border" value="1" min="0" step="0.1" max="0.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >تقديم مقترحات لتحسين العمل    <code>1</code></label>
                                                <input disable  type="number" value="@Model.ImprovementSuggestions" class="form-control form-control-border" value="1" min="0" step="0.1" max="1">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >الشغف المستمر في التعلم    <code>9.5</code></label>
                                                <input disable  type="number" value="@Model.Passion" class="form-control form-control-border" value="1" min="0" step="0.1" max="9.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >الدقة الوتركيز في  أداء المهام   <code>8.5</code></label>
                                                <input disable  type="number" value="@Model.Precision" class="form-control form-control-border" value="1" min="0" step="0.1" max="8.5">
                                            </div>
                                            <div class="form-group col-4">
                                                <label  >اعتماد أكثر من ثلاثة أعمال    <code>5</code></label>
                                                <input disable  type="number" value="@Model.WorkApproved" class="form-control form-control-border" value="1" min="0" step="0.1" max="5">
                                            </div>

                                            <div class="form-group col-4">
                                                <label  >المجموع       <code>5</code></label>
                                                <input disable  type="number" value="@Model.TotalScore" class="form-control form-control-border" value="1" min="0" step="0.1" max="5">
                                            </div>

                                        </div> 
                                        <div class="card-footer">
                                            <a asp-area="" asp-controller="Home" asp-action="ReportsDashboard" class="btn btn-primary">عودة</a>
                                        </div>

                                    </div>
                                    <!-- /.card-body -->
                                </form>
                            </div>
                            <!-- /.card -->

                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1
            </div>
            <strong>Copyright &copy; 2022 <a href="">جميع الحقوق محفوظة</a>.</strong>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="../plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="../plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="../plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="../plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="../plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="../plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../dist/js/adminlte.min.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["excel", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
</body>
</html>

